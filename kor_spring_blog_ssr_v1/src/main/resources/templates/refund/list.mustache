{{> layout/header}}

<div class="container p-5">
    <div class="card">
        <div class="card-header mb-0">
            <h4><b>환불 요청 내역 (사용자) </b></h4>
        </div>

        {{#refundList}}
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div class="flex-grow-1">
                            <h5 class="card-title mb-2">
                                <!--                            추후 실제 게시글 상세보기 화면으로 이동 -->
                                결제 #{{id}}
                            </h5>
                            <p class="text-muted mb-2">
                                <i class="fa-solid fa-clipboard-list"></i> 결제 ID: {{paymentId}}
                            </p>
                            <p class="text-muted mb-2">
                                <i class="fa-solid fa-key"></i> 환불 금액: {{amount}}
                            </p>
                            <p class="text-muted mb-2">
                                <i class="fa-regular fa-rectangle-list"></i> 환불 사유: {{reason}}
                            </p>
                            <p class="text-muted mb-2">
                                {{#isPending}}
                                    <span class="badge bg-warning">{{statusDisplay}}</span>
                                {{/isPending}}
                                {{#isApproved}}
                                    <span class="badge bg-success">{{statusDisplay}}</span>
                                {{/isApproved}}
                                {{#isRejected}}
                                    <span class="badge bg-danger">{{statusDisplay}}</span>
                                {{/isRejected}}
                            </p>
                            <p class="text-muted mb-2">
                                거절 사유 : <span class="text-danger">{{rejectReason}}</span>
                            </p>
                        </div>

                    </div>
                </div>
            </div>
        {{/refundList}}

        <!--            유료 결제 내역이 없을 경우-->
        {{^refundList}}
            <div class="text-center py-5">
                <i class="fas fa-shopping-cart fa-3x text-muted mb-3"></i>
                <h5>결제 내역이 없습니다.</h5>
            </div>
        {{/refundList}}

    </div>
</div>

{{> layout/footer}}
